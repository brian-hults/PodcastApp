<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hults.podcastapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DailyNewsActivity"
            android:label="@string/podcast_daily_news"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity
            android:name=".ComedyActivity"
            android:label="@string/podcast_news_comedy"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity
            android:name=".HistoryActivity"
            android:label="@string/podcast_history"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity
            android:name=".StemActivity"
            android:label="@string/podcast_stem"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity
            android:name=".NowPlayingActivity"
            android:label="@string/now_playing_label"
            android:parentActivityName=".MainActivity"/>
    </application>

</manifest>